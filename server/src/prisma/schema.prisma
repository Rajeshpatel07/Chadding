generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  Id        String   @id @default(uuid())
  Username  String   @unique
  Email     String   @unique
  Password  String
  Role      String   @default("user")
  ProfileImage String?
  Discription String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  videos    Video[]
  comments   Comment[] @relation(name: "UserComments")
}

model Video {
  Id        String    @id @default(uuid())
  Title     String
  Creator   User      @relation(fields: [CreatedBy], references: [Id])
  createdBy String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Comments  Comment[] @relation(name: "VideoComments")
}

model Comment {
  Id        String @id @default(uuid())
  comment   String
  video     Video  @relation(fields: [CreatedBy], references: [Id])
  CreatedBy String
  creator   User    @relation(fields: [CreatedBy], references: [Id])
}
